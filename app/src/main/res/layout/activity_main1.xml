<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pavan.wallpaperapplication.MainActivity1"
    android:orientation="vertical"
    android:background="@drawable/nature"
    >


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE ONE FROM THE BELOW WALLPAPERS - "
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        >


        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/w1"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
        />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w2"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
        />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w3"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
        />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w4"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />


        <ImageView
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w5"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />

        <ImageView
            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w6"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />

        <ImageView
            android:id="@+id/image7"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w7"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />

        <ImageView
            android:id="@+id/image8"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w8"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />

        <ImageView
            android:id="@+id/image9"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w9"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/w10"
            android:scaleType="fitXY"
            android:paddingBottom="10dp"
            />

        <Button
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    More Wallpapers ??? Search With Google!"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

    </LinearLayout>

    </ScrollView>


</LinearLayout>
